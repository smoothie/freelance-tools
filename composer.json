{
    "name": "smoothie/freelance-tools",
    "description": "A package to generate my timesheets, bills and profiles..",
    "license": "Apache-2.0",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/lexer": "^3.0",
        "dompdf/dompdf": "^3.1",
        "giggsey/libphonenumber-for-php": "^8.13",
        "horstoeko/zugferd": "^1.0",
        "ramsey/uuid": "^4.7",
        "symfony/config": "~7.2.0",
        "symfony/console": "~7.2.0",
        "symfony/dotenv": "~7.2.0",
        "symfony/flex": "^2",
        "symfony/framework-bundle": "~7.2.0",
        "symfony/http-client": "~7.2.0",
        "symfony/intl": "~7.2.0",
        "symfony/runtime": "~7.2.0",
        "symfony/twig-bundle": "~7.2.0",
        "symfony/yaml": "~7.2.0",
        "twig/extra-bundle": "^2.12 || ^3.0",
        "twig/twig": "^2.12 || ^3.0",
        "webmozart/assert": "^1.11"
    },
    "require-dev": {
        "behat/behat": "^3.16",
        "friends-of-behat/symfony-extension": "^2.6",
        "phpstan/phpstan-symfony": "^2.0",
        "symfony/maker-bundle": "^1.60",
        "symfony/stopwatch": "~7.2.0"
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Smoothie\\FreelanceTools\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Smoothie\\FreelanceTools\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "docker": false,
            "require": "7.2.*"
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    }
}
